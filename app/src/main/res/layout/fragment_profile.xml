<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_bg"
    tools:context=".profile.ProfileFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="UNTUK MEMULAI SILAHKAN KLIK SALAH SATU PILIHAN MENU YANG ADA DIBAWAH"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="30sp"
            android:textAlignment="center"
            android:layout_marginHorizontal="15dp"
            android:layout_marginVertical="20dp"
            android:layout_gravity="center_horizontal"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dibuat oleh :"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textAlignment="center"
            android:layout_marginHorizontal="15dp"
            android:layout_marginVertical="20dp"
            android:layout_gravity="center_horizontal"/>
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ivFotoProfile"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/profile_title"
            android:layout_width="302dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/ivFotoProfile"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:background="@drawable/kotak_nama"
            android:elevation="12dp"
            android:padding="20dp"
            android:text="Josep Victor Rajadoli"
            android:textSize="15dp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/profile_nim"
            android:layout_width="302dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:padding="20dp"
            android:layout_marginTop="10dp"
            android:elevation="12dp"
            android:layout_below="@id/profile_title"
            android:background="@drawable/kotak_nama"
            android:text="10118369"
            android:textSize="15dp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/profile_kelas"
            android:layout_width="302dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:padding="20dp"
            android:layout_marginTop="10dp"
            android:elevation="12dp"
            android:layout_below="@id/profile_nim"
            android:background="@drawable/kotak_nama"
            android:text="IF - 9"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/profile_email"
            android:layout_width="302dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/profile_kelas"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/kotak_nama"
            android:elevation="12dp"
            android:padding="15dp"
            android:text="josepvictorrrrr@gmail.com"
            android:textSize="15dp"
            android:textStyle="bold" />
    </LinearLayout>
</ScrollView>